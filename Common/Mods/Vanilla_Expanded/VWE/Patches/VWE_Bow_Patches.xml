<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Arrow_Long" or defName="VWE_Arrow_Bolt" or defName="VWE_Arrow_Compound"]</xpath>
    <value>
      <thingClass>GNATFramework.Bullet_Spawn</thingClass>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Arrow_Long"]/projectile</xpath>
    <value>
      <preExplosionSpawnChance>0.5</preExplosionSpawnChance>
      <preExplosionSpawnThingCount>1</preExplosionSpawnThingCount>
      <preExplosionSpawnThingDef>AmmoPrimitive</preExplosionSpawnThingDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Arrow_Bolt"]/projectile</xpath>
    <value>
      <preExplosionSpawnChance>0.5</preExplosionSpawnChance>
      <preExplosionSpawnThingCount>1</preExplosionSpawnThingCount>
      <preExplosionSpawnThingDef>AmmoMedieval</preExplosionSpawnThingDef>
    </value>
  </Operation>

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[defName="VWE_Arrow_Compound"]/projectile</xpath>
    <value>
      <preExplosionSpawnChance>0.5</preExplosionSpawnChance>
      <preExplosionSpawnThingCount>1</preExplosionSpawnThingCount>
      <preExplosionSpawnThingDef>AmmoPrimitive</preExplosionSpawnThingDef>
    </value>
  </Operation>

</Patch>